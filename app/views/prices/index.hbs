<div class="container">

  <div class="center">
    <h1>{{title}}</h1>
    <p>{{summary}}</p>
  </div>

  <div id="users">

    <div id="filter">
      <section>
        <input class="search" placeholder="Search" />
      </section>
      <section>
         <a href="/prices/new"><i class="fa fa-eye-slash fa-lg" aria-hidden="true"></i></a>  |
         <a href="/prices/new"><i class="fa fa-file-text" aria-hidden="true"></i></a>
      </section>
    </div>

    <table id="myTable" class="tablesorter">
      <tr>
        <th><button class="sort" data-sort="skill">Skill</button></th>
        <th><button class="sort" data-sort="perProjectHigh">Project High</button></th>
        <th><button class="sort" data-sort="perProjectLow">Project Low</button></th>
        <th><button class="sort" data-sort="perHourHigh">Hour High</button></th>
        <th><button class="sort" data-sort="perHourLow">Hour Low</button></th>
        <th><button class="sort" data-sort="category">Category</button></th>
        <th>View Account</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <!-- IMPORTANT, class="list" have to be at tbody -->
      <tbody class="list">
      {{#each prices}}
        <tr>
          <td class="skill">{{skill}}</td>
          <td class="perProjectHigh">${{perProjectHigh}}</td>
          <td class="perProjectLow">${{perProjectLow}}</td>
          <td class="perHourHigh">${{perHourHigh}}</td>
          <td class="perHourLow">${{perHourLow}}</td>
          <td class="category">{{category}}</td>
          <td><a href='/prices/{{_id}}'>{{_id}}</a></td>
          <td><a href='/prices/{{_id}}/edit'><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a></td>
          <td class="inline-btn">
            <form action='/prices/{{_id}}/edit' method='post' enctype='application/x-www-form-urlencoded'>
              <input type='hidden' value='DELETE' name='_method'>
              <button type='submit' class="btn-delete"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
